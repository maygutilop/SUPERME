<div class="container">
  <div class="row justify-content-center">
    <div class="col-6">
      <h1>Create new superpower</h1>

      <%= simple_form_for @superpower do |f| %>
        <%= f.input :name %>
        <%= f.input :description %>
        <%= f.input :price %>
        <%= f.label :image %>
        <%= f.input :photo, as: :file %>
        <div class="frame">
          <%= f.button :submit, class: 'custom-btn btn-flat' %>
        </div>

      <% end %>
    </div>
  </div>
</div>
